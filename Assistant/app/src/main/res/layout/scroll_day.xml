<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MENU top-right -->
    <Button
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:backgroundTint="#37943A"
        android:textStyle="bold|italic"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Coins header on the left -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_menu">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="51dp"
            android:src="@drawable/task_coins_brick" />
    </LinearLayout>

    <!-- Left vertical green bar (not in the scroll stack, so it doesn't push content down) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/leftBar"
        android:layout_width="15dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#65AD0F"
        app:cardElevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Content list starts immediately under header -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/leftBar"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. 01. 2026 - Monday"
                android:textColor="#4CAF50"
                android:textSize="34sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TASK LIST"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                android:layout_marginTop="4dp" />

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="63dp"
                    android:layout_height="122dp"
                    android:src="@drawable/scroll_task" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginStart="16dp">

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDIT"
                        android:textColor="#F5F6F3"
                        android:backgroundTint="#4CAF50" />

                    <Space android:layout_width="12dp" android:layout_height="1dp" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GET REWARD"
                        android:textColor="#F5F6F3"
                        android:backgroundTint="#4CAF50" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="63dp"
                    android:layout_height="122dp"
                    android:src="@drawable/scroll_task" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginStart="16dp">

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDIT"
                        android:textColor="#F5F6F3"
                        android:backgroundTint="#4CAF50" />

                    <Space android:layout_width="12dp" android:layout_height="1dp" />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GET REWARD"
                        android:textColor="#F5F6F3"
                        android:backgroundTint="#4CAF50" />
                </LinearLayout>
            </LinearLayout>

            <!-- Add (+) -->
            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD (+)"
                android:textStyle="bold|italic"
                android:layout_marginTop="16dp"
                android:backgroundTint="#4CAF50" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
